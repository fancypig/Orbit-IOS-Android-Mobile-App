<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="#f2eeee"
    android:layout_width="match_parent">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:background="@drawable/gradient"
        android:id="@+id/app_bar"
        android:minHeight="?android:attr/actionBarSize"
        android:theme="@style/AppTheme">
    </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_bar"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:background="#ffffff"
                android:id="@+id/post_1"
                android:elevation="2dp">
                <ImageButton
                    android:id="@+id/image1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"
                    android:background="@drawable/tile_sublet"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUBLET &amp; LEASES"
                    android:textSize="20dp"
                    android:id="@+id/title1"
                    android:layout_toRightOf="@+id/image1"
                    android:textColor="#000"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posted just now"
                    android:layout_toRightOf="@+id/image1"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/posted"
                    android:layout_below="@+id/title1"
                    android:layout_marginTop="5dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/posted"
                    android:layout_toRightOf="@+id/image1">

                <ImageButton
                    android:id="@+id/profile"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/profile"
                    android:layout_toRightOf="@+id/image1"
                    android:layout_below="@+id/posted"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:id="@id/username"
                    android:layout_below="@+id/posted"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/profile"
                    android:layout_marginLeft="8dp"
                    />
                    <ImageButton
                        android:layout_width="17dp"
                        android:id="@+id/heart"
                        android:layout_height="16dp"
                        android:background="@drawable/ic_heart_inactive"
                        android:layout_marginTop="13dp"
                        android:layout_below="@id/posted"
                        android:layout_toRightOf="@+id/username"
                        android:layout_marginLeft="14dp"
                        />
                <ImageButton
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_attach"
                    android:layout_marginTop="13dp"
                    android:layout_below="@id/posted"
                    android:layout_toRightOf="@+id/heart"
                    android:layout_marginLeft="24dp"
                    />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="114dp"
                android:background="#fff">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="33dp"
                    android:id="@+id/location"
                    android:background="@drawable/ic_location"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:layout_marginTop="24dp"
                    android:layout_toRightOf="@+id/location"
                    android:layout_marginLeft="23dp"
                    android:id="@id/name_location"/>

                <EditText
                    android:layout_width="276dp"
                    android:layout_height="18dp"
                    android:textSize="14dp"
                    android:textColor="#808080"
                    android:background="@null"
                    android:layout_toRightOf="@+id/location"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="23dp"
                    android:layout_below="@+id/name_location"
                    android:id="@+id/location_text"
                    />

                <View
                    android:layout_width="276dp"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:id="@+id/divider"
                    android:layout_below="@+id/location_text"
                    android:layout_toRightOf="@+id/location"
                    android:layout_marginLeft="23dp"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_below="@+id/divider"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="23dp"
                    android:id="@+id/cost"
                    android:background="@drawable/ic_cost"
                    />

                <TextView
                    android:id="@+id/cost_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost"
                    android:layout_marginTop="13dp"
                    android:layout_below="@+id/divider"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/cost" />

                <EditText
                    android:id="@+id/fillCost"
                    android:layout_width="276dp"
                    android:layout_height="18dp"
                    android:textSize="14dp"
                    android:textColor="#808080"
                    android:layout_below="@+id/cost_value"
                    android:layout_toRightOf="@+id/cost"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="25dp"
                    android:background="@null"
                    />

                <View
                    android:layout_width="276dp"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:id="@+id/divider2"
                    android:layout_below="@+id/fillCost"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/location"
                    android:layout_marginLeft="23dp"
                    />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="22dp"
                    android:layout_below="@+id/divider2"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/notes"
                    android:background="@drawable/ic_notes"
                    />
                <TextView
                    android:id="@+id/note_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:layout_marginTop="13dp"
                    android:layout_below="@+id/divider2"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/notes" />

                <EditText
                    android:id="@+id/fillNote"
                    android:layout_width="276dp"
                    android:layout_height="18dp"
                    android:textSize="14dp"
                    android:textColor="#808080"
                    android:layout_below="@+id/notes"
                    android:layout_toRightOf="@+id/cost"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="25dp"
                    android:background="@null"
                    />

                <View
                    android:layout_width="276dp"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:id="@+id/divider3"
                    android:layout_below="@+id/fillNote"
                    android:layout_toRightOf="@+id/cost"
                    android:layout_marginLeft="23dp"
                    />
                <EditText
                    android:id="@+id/fillNote2"
                    android:layout_width="276dp"
                    android:layout_height="18dp"
                    android:textSize="14dp"
                    android:textColor="#808080"
                    android:layout_below="@+id/fillNote"
                    android:layout_toRightOf="@+id/cost"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="25dp"
                    android:background="@null"
                    />

                <View
                    android:layout_width="276dp"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:id="@+id/divider4"
                    android:layout_below="@+id/fillNote2"
                    android:layout_toRightOf="@+id/cost"
                    android:layout_marginLeft="23dp"
                    />
                <EditText
                    android:id="@+id/fillNote3"
                    android:layout_width="276dp"
                    android:layout_height="18dp"
                    android:textSize="14dp"
                    android:textColor="#808080"
                    android:layout_below="@+id/fillNote2"
                    android:layout_toRightOf="@+id/cost"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="25dp"
                    android:background="@null"
                    />

                <View
                    android:layout_width="276dp"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:id="@+id/divider3"
                    android:layout_below="@+id/fillNote3"
                    android:layout_toRightOf="@+id/cost"
                    android:layout_marginLeft="23dp"
                    />
                <EditText
                    android:id="@+id/fillNote4"
                    android:layout_width="276dp"
                    android:layout_height="18dp"
                    android:textSize="14dp"
                    android:textColor="#808080"
                    android:layout_below="@+id/fillNote3"
                    android:layout_toRightOf="@+id/cost"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="25dp"
                    android:background="@null"
                    />

                <View
                    android:layout_width="276dp"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:id="@+id/divider3"
                    android:layout_below="@+id/fillNote4"
                    android:layout_toRightOf="@+id/cost"
                    android:layout_marginLeft="23dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:textSize="20dp"
                    android:text="Post to Board"
                    android:background="#fc3768"
                    android:layout_below="@id/info5"
                    android:textColor="#fff"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


